{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sovereign Studio",
  "version": "2.4.0",
  "identifier": "org.digitalsovereign.dsds",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Sovereign Studio",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Digital Sovereign Society",
    "homepage": "https://github.com/AuthorPrime/dsds",
    "license": "MIT",
    "category": "Productivity"
  }
}
